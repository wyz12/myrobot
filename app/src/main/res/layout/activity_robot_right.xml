<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/chat_from_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012-09-01 18:30:20"
        style="@style/chat_date_style"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_marginRight="10dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:id="@+id/chat_myContent"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/chat_from_msg_right"
                   android:text="你好"
                   android:minHeight="50dp"
                   android:textSize="18dp"
                   android:textColor="#000"
                   android:focusable="true"
                   android:clickable="true"
                   android:lineSpacingExtra="2dp"/>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="49dp"
                      android:layout_height="49dp"
                      android:id="@+id/chat_my"
                      android:src="@drawable/robot"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="小昭"
                   android:layout_below="@+id/chat_my"
                   android:id="@+id/chat_myName"/>
             </RelativeLayout>

           </LinearLayout>
    </LinearLayout>



</LinearLayout>
